<%= render "layouts/errors", :object => @review %>

<%= form_for [@product, @review] do |f| %>
  <h2><%= f.label :rating, "Rating", class: "title is-4" %></h2>
  <div class="ratings block">
    <%= f.radio_button :rating, 1, checked: true %>
    <%= f.label :rating_1, "⭐️" %>
    <%= f.radio_button :rating, 2 %>
    <%= f.label :rating_2, "⭐️" %>
    <%= f.radio_button :rating, 3 %>
    <%= f.label :rating_3, "⭐️" %>
    <%= f.radio_button :rating, 4 %>
    <%= f.label :rating_4, "⭐️" %>
    <%= f.radio_button :rating, 5 %>
    <%= f.label :rating_5, "⭐️" %>
  </div>
  <h2><%= f.label :content, "Review", class: "title is-4" %></h2>
  <div class="block">
    <%= f.text_area :content, placeholder: "Your review", class: "textarea block" %>
  </div>
  <div class="block">
    <%= f.submit "Submit review", class: "button is-primary" %>
  </div>
<% end %>
